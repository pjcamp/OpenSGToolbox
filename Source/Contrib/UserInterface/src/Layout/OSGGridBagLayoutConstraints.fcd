<?xml version="1.0"?>

<FieldContainer
    name="GridBagLayoutConstraints"
    parent="LayoutConstraints"
    library="ContribUserInterface"
    pointerfieldtypes="both"
    structure="concrete"
    systemcomponent="true"
    parentsystemcomponent="true"
    decoratable="false"
    useLocalIncludes="false"
    isNodeCore="false"
    authors="David Kabala (djkabala@gmail.com)                             "
>
A UI GridBagLayoutConstraints.
    <Field
        name="GridX"
        type="UInt16"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="0"
        access="public"
    >
    Specifies the cell containing the leading corner of the component's display area
    </Field>
    <Field
        name="GridY"
        type="UInt16"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="0"
        access="public"
    >
    Specifies the cell containing the leading corner of the component's display area
    </Field>
    <Field
        name="GridWidth"
        type="UInt16"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="1"
        access="public"
    >
    Specifies the number of cells in a row in the component's display area
    </Field>
    <Field
        name="GridHeight"
        type="UInt16"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="1"
        access="public"
    >
    Specifies the number of cells in a column in the component's display area
    </Field>
    <Field
        name="Fill"
        type="UInt32"
        category="data"
        cardinality="single"
        visibility="external"
        access="public"
    >
    Used when the component's display area is larger than the component's requested size to determine whether (and how) to resize the component
    </Field>
    <Field
        name="HorizontalAlignment"
        type="Real32"
        category="data"
        cardinality="single"
        visibility="external"
        access="public"
        defaultValue="0.5"
    >
    Used when the component is smaller than its display area to determine where (within the display area) to place the component
    </Field>
    <Field
        name="VerticalAlignment"
        type="Real32"
        category="data"
        cardinality="single"
        visibility="external"
        access="public"
        defaultValue="0.5"
    >
    Used when the component is smaller than its display area to determine where (within the display area) to place the component
    </Field>
    <Field
        name="WeightX"
        type="Real32"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="1.0"
        access="public"
    >
    Used to determine how to distribute space, which is important for specifying resizing behavior
    </Field>
    <Field
        name="WeightY"
        type="Real32"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="1.0"
        access="public"
    >
    Used to determine how to distribute space, which is important for specifying resizing behavior
    </Field>
    <Field
        name="InternalPadX"
        type="UInt32"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="0"
        access="public"
    >
    Specifies the component's internal padding within the layout, how much to add to the minimum size of the component. The width of the component will be at least its minimum width plus (ipadx * 2) pixels (since the padding applies to both sides of the component)
    </Field>
    <Field
        name="InternalPadY"
        type="UInt32"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="0"
        access="public"
    >
    Specifies the component's internal padding within the layout, how much to add to the minimum size of the component. The height of the component will be at least its minimum height plus (ipady * 2) pixels (since the padding applies to both sides of the component)
    </Field>
    <Field
        name="PadLeft"
        type="UInt32"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="0"
        access="public"
    >
    This field specifies the external padding of the component, the minimum amount of space between the component and the Left edge of its display area.
    </Field>
    <Field
        name="PadRight"
        type="UInt32"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="0"
        access="public"
    >
    This field specifies the external padding of the component, the minimum amount of space between the component and the Right edge of its display area.
    </Field>
    <Field
        name="PadTop"
        type="UInt32"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="0"
        access="public"
    >
    This field specifies the external padding of the component, the minimum amount of space between the component and the Top edge of its display area.
    </Field>
    <Field
        name="PadBottom"
        type="UInt32"
        category="data"
        cardinality="single"
        visibility="external"
        defaultValue="0"
        access="public"
    >
    This field specifies the external padding of the component, the minimum amount of space between the component and the Bottom edge of its display area.
    </Field>
</FieldContainer>
