<?xml version="1.0"?>

<FieldContainer
    name="UniformParticleAffector"
    parent="ParticleAffector"
    library="ContribParticleSystem"
    pointerfieldtypes="both"
    structure="concrete"
    systemcomponent="true"
    parentsystemcomponent="true"
    decoratable="false"
    useLocalIncludes="false"
    isNodeCore="false"
    authors="David Kabala (djkabala@gmail.com), Daniel Guilliams           "
>
    <Field
        name="Magnitude"
        type="Real32"
        category="data"
        cardinality="single"
        visibility="external"
        access="public"
        defaultValue="5.00"
    >
    </Field>
    <Field
        name="Direction"
        type="Vec3f"
        category="data"
        cardinality="single"
        visibility="external"
        access="public"
        defaultValue="1.0, 0.0, 0.0"
    >
    </Field>
    <Field
        name="Attenuation"
        type="Real32"
        category="data"
        cardinality="single"
        visibility="external"
        access="public"
        defaultValue="2.0"
    >
    </Field>
    <Field
        name="MaxDistance"
        type="Real32"
        category="data"
        cardinality="single"
        visibility="external"
        access="public"
        defaultValue="-1.0"
    >
    </Field>
    <Field
        name="Beacon"
        type="Node"
        category="pointer"
        cardinality="single"
        visibility="external"
        access="public"
        defaultValue="NULL"
    >
    </Field>
    <Field
        name="ParticleMass"
        type="Real32"
        category="data"
        cardinality="single"
        visibility="external"
        access="public"
        defaultValue="1.0"
    >
    </Field>
</FieldContainer>
